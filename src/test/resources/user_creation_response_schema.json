{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/product.schema.json",
  "title": "User creation",
  "description": "User in list response validation",
  "type": "object",
  "properties": {
    "_meta": {
      "properties": {
        "success": {
          "type": "boolean"
        },
        "code": {
          "type": "integer"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "result": {
      "properties": {
        "id": {
          "type": "string"
        },
        "first_name": {
          "type": "string"
        },
        "last_name": {
          "type": "string"
        },
        "gender": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "phone": {
          "type": "null"
        },
        "website": {
          "type": "null"
        },
        "address": {
          "type": "null"
        }
      },
      "required": [
        "first_name",
        "last_name",
        "email",
        "gender",
        "status"
      ]
    }
  }
}